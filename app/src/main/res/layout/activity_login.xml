<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activies.LoginActivity">

    <TextView
        android:id="@+id/lbl_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_black"
        android:text="Login"
        android:textColor="#E91E63"
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.278" />

    <ImageView
        android:id="@+id/img_linha"
        android:layout_width="36dp"
        android:layout_height="12dp"
        android:src="@drawable/enfeite_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lbl_login"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lbl_login"
        app:layout_constraintTop_toBottomOf="@+id/lbl_login"
        app:layout_constraintVertical_bias="0.002" />

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="71dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.145"
        app:srcCompat="@drawable/user_login" />

    <EditText
        android:id="@+id/txt_email"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/edittext_background"
        android:drawableStart="@drawable/user"
        android:elevation="20dp"
        android:ems="10"
        android:hint="Type your email"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#C6C6C6"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458" />

    <EditText
        android:id="@+id/txt_senha"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/edittext_background"
        android:drawableStart="@drawable/look"
        android:elevation="20dp"
        android:ems="10"
        android:hint="Type your password"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#C6C6C6"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.579" />

    <ImageButton
        android:id="@+id/btn_criar"
        android:layout_width="133dp"
        android:layout_height="64dp"
        android:backgroundTint="#FFFFFF"
        android:onClick="gotoEmptyHome"
        android:src="@drawable/botao_criarconta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.787" />

    <ImageButton
        android:id="@+id/btn_sing"
        android:layout_width="133dp"
        android:layout_height="64dp"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/botao_sing_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.787" />

    <TextView
        android:id="@+id/lbl_sing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="SING IN"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_sing"
        app:layout_constraintEnd_toEndOf="@+id/btn_sing"
        app:layout_constraintStart_toStartOf="@+id/btn_sing"
        app:layout_constraintTop_toTopOf="@+id/btn_sing" />

    <TextView
        android:id="@+id/lbl_criar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="Criar conta"
        android:textColor="#FF3367"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_criar"
        app:layout_constraintEnd_toEndOf="@+id/btn_criar"
        app:layout_constraintStart_toStartOf="@+id/btn_criar"
        app:layout_constraintTop_toTopOf="@+id/btn_criar" />

</androidx.constraintlayout.widget.ConstraintLayout>