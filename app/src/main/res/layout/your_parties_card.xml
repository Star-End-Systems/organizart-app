<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="0"
        android:layout_margin="12dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/your_parties_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/your_parties_card_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.491"
                app:srcCompat="@drawable/urso" />

            <TextView
                android:id="@+id/your_parties_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/inter"
                android:text="Chá de bebe"
                android:textColor="#B7B7B7"
                android:textSize="5dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/your_parties_card_image"
                app:layout_constraintStart_toStartOf="@+id/your_parties_card_name"
                app:layout_constraintTop_toBottomOf="@+id/your_parties_card_name"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/your_parties_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_extrabold"
                android:text="Chá de Frauda"
                android:textColor="#808080"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/your_parties_card_image"
                app:layout_constraintTop_toTopOf="@+id/your_parties_card_image" />

            <TextView
                android:id="@+id/your_parties_card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="46dp"
                android:layout_marginBottom="34dp"
                android:fontFamily="@font/inter_extrabold"
                android:text="30/11/2023"
                android:textColor="#B5B5B5"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.761"
                app:layout_constraintStart_toEndOf="@+id/your_parties_card_name"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>